{
  "name": "angular-kickstart",
  "version": "1.0.0",
  "scripts": {
    "start": "lite-server && npm run build_prod:watch",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "build_prod:watch": "npm run build_prod -w",
    "build_prod": "browserify -s main app/main.js > app/bundle.js && npm run minify",
    "minify": "uglifyjs app/bundle.js --screw-ie8 --compress --mangle --output app/bundle.min.js"
  },
  "dependencies": {
    "@angular/common": "~4.2.6",
    "@angular/compiler": "~4.2.6",
    "@angular/core": "~4.2.6",
    "@angular/forms": "~4.2.6",
    "@angular/http": "~4.2.6",
    "@angular/platform-browser": "~4.2.6",
    "@angular/platform-browser-dynamic": "~4.2.6",
    "@angular/router": "~4.2.6",
    "@ng-bootstrap/ng-bootstrap": "^1.0.0-alpha.25",
    "angular-in-memory-web-api": "~0.3.0",
    "bootstrap": "3.3.7",
    "core-js": "^2.4.1",
    "rxjs": "5.4.1",
    "systemjs": "0.19.40",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.6.5",
    "browserify": "^13.3.0",
    "concurrently": "^2.2.0",
    "lite-server": "^2.2.0",
    "typescript": "2.2.0",
    "uglify-js": "^2.4.10"
  }
}
